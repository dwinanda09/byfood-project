# Server Configuration
server:
  port: "8080"
  host: "0.0.0.0"

# Database Configuration
database:
  driver: "postgres"
  host: "postgres"
  port: "5432"
  user: "postgres"
  password: "password"
  name: "byfood_library"
  ssl_mode: "disable"
  max_connections: 25
  max_idle_connections: 10

# CORS Configuration
cors:
  allowed_origins:
    - "http://localhost:3000"
  allowed_methods:
    - "GET"
    - "POST" 
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowed_headers:
    - "*"

# Logging Configuration
logging:
  level: "info"
  environment: "development"

# API Configuration
api:
  base_path: ""
  enable_swagger: true
  swagger_path: "/swagger"